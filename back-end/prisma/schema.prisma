// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String    @default(cuid()) @id
  email       String?   @unique
  password    String?
  name        String?
  avatarUrl   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  region      String?
  occupation  String?
  ranking     Int?
  amount      Int?
  stock       String[]
  watchlist   String[]
  transaction Transaction[]
}

model Transaction {
  id       String   @default(cuid()) @id
  createAt DateTime @default(now())
  company  String[]
  quantity Int?
  price    Int?
  kind     String?
}

model UserVerification {
  id        String    @default(cuid()) @id
  email     String?
  password  String?
  expiredAt String?
}